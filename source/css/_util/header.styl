header{
	bottom: 0;
	padding: 30px;
}
header>nav{
	width: 100%;
	max-width: 666px;
	margin: auto;
	text-align: center;
}
header>nav>.name{
	width: 100%;
}
header>nav>.name>.g{
	font-size: 30px;
	letter-spacing: 5px;
	text-shadow: var(--text-shadow);
	font-weight: 300;
	position: relative;
}
header>nav>.name>.g>a{
	display inline-block
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	z-index 999
}
header>nav>.name>.i{
	display: block;
	font-size: 12px;
}