.theme_div
    display flex
    justify-content center

.theme
    width 60px
    height 20px
    border 3px solid var(--color)
    border-radius 10px
    position relative
    display flex
    justify-content center
    align-items center

.theme span
    display inline-block
    width 20px
    height 20px
    position relative
    z-index 999
    cursor pointer

.theme i
    display inline-block
    width 30px
    height 30px
    background-color var(--selection-background-color)
    position absolute
    top 50%
    left var(--theme_i)
    margin-top -15px
    border-radius 15px
    font-style normal

.theme i::before
    display block
    width 100%
    height 100%
    font-size 12px
    text-align: center
    line-height: 30px
    content var(--theme_i_before)
    color var(--color_back)